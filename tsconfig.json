{
    "compilerOptions": {
      "lib": ["es2021"],
      "target": "es2021",
      "module": "CommonJS",
      "outDir": "./lib",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ]
}